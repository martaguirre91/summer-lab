<section id="project">
  <div class="container main-section">
    <div class="row">
      <div class="col-lg-12 text-center">
        <div class="row">
          {{#each projects as |p|}}
          <div class="col-lg-4 col-md-12 mb-4 card-main">
            <div class="card-section border rounded p-3">
              <a href="/projects/{{p._id}}">
                <div class="card-header-first card-header-first rounded pb-5">
                  <h2 class="card-header-title text-black pt-3">{{p.projectName}}</h2>
              </a>
              <h5 class="mb-0 pb-4 pt-2 text-black">{{p.user.username}}</h5>
              <span><a href="/users/{{p.user.username}}"><i class="fa fa-user rounded-circle"
                    aria-hidden="true"></i></a></span>
              <span><a href="#"><i class="fa fa-download rounded-circle" aria-hidden="true"></i></a></span>
              <span><a href="#"><i class="fa fa-info rounded-circle" aria-hidden="true"></i></a></span>
            </div>
            <div class="card-body text-center">
              <p class="card-text">{{p.body}}</p>
            </div>
            <a class="text-muted d-block text-sm mb-2" href="/projects/{{p._id}}">
              <i class="fa fa-comments"></i>
              {{p.comments.length}} comments
            </a>
            <button class="btn btn-sm mb-2 btn-outline-danger" id="{{p._id}}" onclick="like(event)">
              <i class="fa fa-heart"></i>
              <span class="likes-count">{{p.likes.length}}</span> likes
            </button>
          </div>
          <div>
          </div>
        </div>

        {{/each}}
      </div>
    </div>
  </div>
  </div>
</section>

{{#if message}}
<div class="alert alert-primary" role="alert">
  {{message}}
</div>
{{/if}}
{{#if error.validation}}
<div class="alert alert-danger" role="alert">
  {{error.validation.message}}
</div>
{{/if}}
<form action="/login" method="POST">
  <div class="form-group">
    <label for="email">Email</label>
    <input name="email" type="text" class="form-control {{#if error.email }}is-invalid{{/if}}" id="email"
      placeholder="Enter email" value="{{ user.email }}">

    {{#if error.email}}
    <div class="invalid-feedback">
      {{error.email.message}}
    </div>
    {{/if}}
  </div>

  <div class="form-group">
    <label for="password">Password</label>
    <input name="password" type="password" class="form-control {{#if error.password }}is-invalid{{/if}}" id="password"
      placeholder="Enter password" value="{{ user.password }}">

    {{#if error.password}}
    <div class="invalid-feedback">
      {{error.password.message}}
    </div>
    {{/if}}
  </div>

  <button type="submit" class="btn btn-primary mb-3">Login</button>

  <p>Don't have an account? <a href="/signup">register</a></p>
</form>